{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "lib": ["ES2022", "DOM"],

    "rootDir": ".",
    "outDir": "dist",

    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,

    "types": ["vitest/globals", "node"],

    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },

  "include": [
    "src"
  ]
}