{
    "name": "fourch-lang-language",
    "description": "The language specific package",
    "version": "0.0.1",
    "type": "module",
    "engines": {
        "node": ">=20.10.0",
        "npm": ">=10.2.3"
    },
    "files": [
        "src/language/out",
        "../../src"
    ],
    "main": "src/language/index.js",
    "module": "src/language/index.js",
    "exports": {
        ".": {
            "types": "./out/index.d.ts",
            "default": "./out/index.js"
        }
    },
    "typesVersions": {
        "*": {
            ".": [
                "out/index"
            ]
        }
    },
    "scripts": {
      "clean": "shx rm -rf dist .generated *.tsbuildinfo",
      "watch": "tsc -w",

      "build": "tsc -p tsconfig.json && npm run copy:assets && npm run copy:playable",
      "build:clean": "npm run clean && npm run build",
      "copy:assets": "shx mkdir -p dist/src/backends/html/assets && shx cp -r src/backends/html/assets/* dist/src/backends/html/assets/",
      "copy:playable": "shx cp -r src/backends/playable/html dist/src/backends/playable/",

      "langium:generate": "langium generate",
      "langium:watch": "langium generate --watch",

      "generate": "npm run build && node ./dist/src/cli/main.js generate",
      "generate:auto": "npm run build:clean && node ./dist/src/cli/main.js auto",
      "generate:all": "npm run build:clean && node ./dist/src/cli/main.js auto:all",

      "test": "vitest run",
      "test:oracle": "vitest run oracle.test.ts",
      "test:validation": "vitest run validation.test.ts",
      "test:generation": "vitest run generation.test.ts",
      "test:render": "vitest run render.test.ts",
      "test:name": "vitest run --testNamePattern",
      "test:coverage": "vitest run --coverage",
      "cli": "node ./bin/cli.js"
    },
    "dependencies": {
        "ansi-styles": "^6.2.3",
        "chalk": "^5.3.0",
        "commander": "^11.1.0",
        "langium": "~4.1.0"
    },
    "devDependencies": {
        "@types/node": "^24.10.1",
        "@vitest/coverage-v8": "^4.0.12",
        "langium-cli": "~4.1.0",
        "linkedom": "^0.18.12",
        "shx": "^0.4.0",
        "typescript": "^5.9.3",
        "vitest": "^4.0.12"
    },
    "volta": {
        "node": "20.19.2",
        "npm": "10.8.2"
    },
    "bin": {
      "fourch": "bin/cli.js"
    }
}
